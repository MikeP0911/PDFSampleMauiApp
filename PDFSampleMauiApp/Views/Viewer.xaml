<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  xmlns:local="clr-namespace:PDFSampleMauiApp.Views.Controls"
             x:Class="PDFSampleMauiApp.Views.Viewer"
             Title="Viewer">
    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary"                                
          Priority="0"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
       
        <!--Including CustomWebView control to display WebView-->
        <local:CustomWebView
            x:Name="custwebview"
            VerticalOptions="FillAndExpand"
            HorizontalOptions="FillAndExpand">
        </local:CustomWebView>
        
    </ContentPage.Content>
</ContentPage>